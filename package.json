{
  "name": "belle-rogan.git",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "sharp-webp": "sharp -i ./src/img/**/*.png -o ./dist/assets/img -f webp",
    "copy-svg": "cpy './src/img/**/*.svg' './dist/assets/img/' --parents",
    "build-assets": "npm run sharp-webp && npm run copy-svg",
    "watch:sharp-webp": "chokidar './src/img/**/*.png' -c 'npm run sharp-webp'",
    "watch:copy-svg": "chokidar './src/img/**/*.svg' -c 'npm run copy-svg'",
    "watch": "npm-run-all --parallel watch:sharp-webp watch:copy-svg"
  },
  "author": "Adop",
  "license": "ISC",
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "cpy-cli": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "sharp-cli": "^5.1.0"
  }
}
